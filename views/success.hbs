<h1>Success!</h1>

<p>{{message}}</p>
<p>filename: <span id="filename">{{filename}}</span> <button id="copyBtn">Copy filename</button></p>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById("copyBtn")
      .onclick = function () {
        let text = document.getElementById("filename").innerText;
        navigator.clipboard.writeText(text)
          .then(() => {
            alert('Text copied to clipboard');
          })
          .catch(err => {
            alert('Error in copying text: ', err);
          });
      }
  });
</script>

